@model DevcraftWMS.Portal.ViewModels.InboundOrders.InboundOrderDetailViewModel
@{
    ViewData["Title"] = Model.Order?.OrderNumber ?? "Inbound Order";
    string StatusLabel(int status) => status switch
    {
        0 => "Issued",
        1 => "Scheduled",
        2 => "In Progress",
        3 => "Completed",
        4 => "Canceled",
        5 => "Partially completed",
        _ => $"Status {status}"
    };
    string PriorityLabel(int priority) => priority switch
    {
        0 => "Low",
        1 => "Normal",
        2 => "High",
        3 => "Urgent",
        _ => $"Priority {priority}"
    };
    string InspectionLabel(int inspection) => inspection switch
    {
        0 => "None",
        1 => "Sample",
        2 => "Full",
        _ => $"Inspection {inspection}"
    };
    var isCompletionLocked = Model.Order?.Status is 3 or 4;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">Inbound Order @Model.Order?.OrderNumber</h1>
        <div class="text-muted">Order execution plan from ASN.</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

@if (Model.Order is null)
{
    <div class="alert alert-warning">Inbound order not found.</div>
}
else
{
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">ASN</div>
                    <div class="fw-semibold">@Model.Order.AsnNumber</div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">Warehouse</div>
                    <div class="fw-semibold">@Model.Order.WarehouseName</div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">Status</div>
                    <span class="badge bg-primary-subtle text-primary">@StatusLabel(Model.Order.Status)</span>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">Priority</div>
                    <span class="badge bg-secondary-subtle text-secondary">@PriorityLabel(Model.Order.Priority)</span>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">Inspection</div>
                    <div class="fw-semibold">@InspectionLabel(Model.Order.InspectionLevel)</div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">Suggested Dock</div>
                    <div class="fw-semibold">@Model.Order.SuggestedDock</div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">Supplier</div>
                    <div class="fw-semibold">@Model.Order.SupplierName</div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">Document</div>
                    <div class="fw-semibold">@Model.Order.DocumentNumber</div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="text-muted small">Expected Arrival</div>
                    <div class="fw-semibold">@Model.Order.ExpectedArrivalDate?.ToString("yyyy-MM-dd")</div>
                </div>
                <div class="col-12">
                    <div class="text-muted small">Notes</div>
                    <div>@Model.Order.Notes</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h6">Parameters</h2>
                    <form asp-action="UpdateParameters" asp-route-id="@Model.Order.Id" method="post" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div class="col-12">
                            <label class="form-label">Inspection Level</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-clipboard-check"></i></span>
                                <select class="form-select" name="InspectionLevel">
                                    <option value="0" selected="@(Model.Parameters.InspectionLevel == 0)">None</option>
                                    <option value="1" selected="@(Model.Parameters.InspectionLevel == 1)">Sample</option>
                                    <option value="2" selected="@(Model.Parameters.InspectionLevel == 2)">Full</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Priority</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-flag"></i></span>
                                <select class="form-select" name="Priority">
                                    <option value="0" selected="@(Model.Parameters.Priority == 0)">Low</option>
                                    <option value="1" selected="@(Model.Parameters.Priority == 1)">Normal</option>
                                    <option value="2" selected="@(Model.Parameters.Priority == 2)">High</option>
                                    <option value="3" selected="@(Model.Parameters.Priority == 3)">Urgent</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Suggested Dock</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-truck"></i></span>
                                <input class="form-control" name="SuggestedDock" value="@Model.Parameters.SuggestedDock" />
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Save Parameters</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h6">Cancel Order</h2>
                    <form asp-action="Cancel" asp-route-id="@Model.Order.Id" method="post" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div class="col-12">
                            <label class="form-label">Reason</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-x-circle"></i></span>
                                <input class="form-control" name="Reason" value="@Model.Cancel.Reason" />
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-outline-danger">Cancel Order</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h6">Complete Order</h2>
                    @if (isCompletionLocked)
                    {
                        <div class="alert alert-info mb-0">Inbound order is already closed or canceled.</div>
                    }
                    else
                    {
                        <form asp-action="Complete" asp-route-id="@Model.Order.Id" method="post" class="row g-3">
                            @Html.AntiForgeryToken()
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="AllowPartial" value="true" id="AllowPartial" />
                                    <label class="form-check-label" for="AllowPartial">
                                        Allow partial completion (if receipts or putaway are still pending)
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Notes</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-journal-text"></i></span>
                                    <input class="form-control" name="Notes" value="@Model.Complete.Notes" />
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">Complete Order</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h6">Status History</h2>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Notes</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Order.StatusEvents is null || !Model.Order.StatusEvents.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">No status events recorded.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var evt in Model.Order.StatusEvents)
                                    {
                                        <tr>
                                            <td>@StatusLabel(evt.FromStatus)</td>
                                            <td>@StatusLabel(evt.ToStatus)</td>
                                            <td>@evt.Notes</td>
                                            <td>@evt.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="h5">Items</h2>
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>UoM</th>
                            <th>Quantity</th>
                            <th>Lot</th>
                            <th>Expiry</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No items found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ProductCode - @item.ProductName</td>
                                    <td>@item.UomCode</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.LotCode</td>
                                    <td>@item.ExpirationDate?.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
