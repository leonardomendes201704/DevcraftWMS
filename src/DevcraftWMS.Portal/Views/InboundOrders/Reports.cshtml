@model DevcraftWMS.Portal.ViewModels.InboundOrders.InboundOrderReportsViewModel
@{
    ViewData["Title"] = "Receiving Reports";
    string StatusLabel(int status) => status switch
    {
        0 => "Issued",
        1 => "Scheduled",
        2 => "In Progress",
        3 => "Completed",
        4 => "Canceled",
        5 => "Partially completed",
        _ => $"Status {status}"
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">Receiving Reports</h1>
        <div class="text-muted">Inbound order receipt reports with divergences and totals.</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="#reportsHelp" data-bs-toggle="modal">
            <i class="bi bi-question-circle"></i> Help
        </a>
        <a class="btn btn-outline-secondary" asp-controller="InboundOrders" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Inbound Orders
        </a>
    </div>
</div>

<form method="get" class="card border-0 shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-lg-3">
                <label class="form-label">Created From</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                    <input class="form-control" type="date" name="CreatedFromUtc" value="@(Model.Query.CreatedFromUtc?.ToString("yyyy-MM-dd"))" />
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label">Created To</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-check"></i></span>
                    <input class="form-control" type="date" name="CreatedToUtc" value="@(Model.Query.CreatedToUtc?.ToString("yyyy-MM-dd"))" />
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label">Warehouse</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                    <select class="form-select" name="WarehouseId">
                        <option value="">Select...</option>
                        @foreach (var warehouse in Model.Warehouses)
                        {
                            <option value="@warehouse.Id" selected="@(Model.Query.WarehouseId == warehouse.Id)">@warehouse.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label">Order Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-hash"></i></span>
                    <input class="form-control" name="OrderNumber" value="@Model.Query.OrderNumber" />
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label">Status</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-circle-half"></i></span>
                    <select class="form-select" name="Status">
                        <option value="">Select...</option>
                        <option value="0" selected="@(Model.Query.Status == 0)">Issued</option>
                        <option value="1" selected="@(Model.Query.Status == 1)">Scheduled</option>
                        <option value="2" selected="@(Model.Query.Status == 2)">In Progress</option>
                        <option value="3" selected="@(Model.Query.Status == 3)">Completed</option>
                        <option value="4" selected="@(Model.Query.Status == 4)">Canceled</option>
                        <option value="5" selected="@(Model.Query.Status == 5)">Partially completed</option>
                    </select>
                </div>
            </div>
            <div class="col-12 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a class="btn btn-outline-secondary" asp-action="Reports">Reset</a>
            </div>
        </div>
    </div>
</form>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="text-muted">Total: @Model.TotalCount</div>
            <div class="text-muted">Page @Model.Query.PageNumber</div>
        </div>
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Order</th>
                        <th>Warehouse</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th class="text-end">Report</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No reports found for the selected period.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model.Items)
                        {
                            <tr>
                                <td class="fw-semibold">@order.OrderNumber</td>
                                <td>@order.WarehouseName</td>
                                <td><span class="badge bg-primary-subtle text-primary">@StatusLabel(order.Status)</span></td>
                                <td>@order.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Report" asp-route-id="@order.Id">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="ReportExport" asp-route-id="@order.Id">
                                        <i class="bi bi-download"></i> CSV
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="reportsHelp" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Receiving Reports Help</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>This screen lists inbound orders with available receipt reports and divergences.</p>
                <ul>
                    <li><strong>Period filter:</strong> use Created From/To to narrow the report list.</li>
                    <li><strong>View:</strong> open the full report with summary cards, received vs. expected, and divergences.</li>
                    <li><strong>CSV:</strong> download the receipt report file for sharing or audits.</li>
                </ul>
                <p>Subscreens:</p>
                <ul>
                    <li><strong>Report details:</strong> shows line-level receipt totals and divergence evidence count.</li>
                    <li><strong>Export:</strong> generates the CSV from the latest receipt data.</li>
                </ul>
            </div>
        </div>
    </div>
</div>
