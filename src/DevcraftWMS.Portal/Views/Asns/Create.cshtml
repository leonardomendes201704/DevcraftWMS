@model DevcraftWMS.Portal.ViewModels.Asns.AsnCreateViewModel
@{
    ViewData["Title"] = "Create ASN";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">Create ASN</h1>
        <div class="text-muted">Register a new inbound notice for this customer.</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form method="post" class="row g-3">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger small" })

            <div class="col-12 col-lg-6">
                <label class="form-label">Warehouse</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                    <select class="form-select" asp-for="WarehouseId">
                        <option value="">Select...</option>
                        @foreach (var warehouse in Model.Warehouses)
                        {
                            <option value="@warehouse.Id">@warehouse.Code - @warehouse.Name</option>
                        }
                    </select>
                </div>
                <span class="text-danger small">@Html.ValidationMessageFor(m => m.WarehouseId)</span>
            </div>

            <div class="col-12 col-lg-6">
                <label class="form-label">ASN Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                    <input class="form-control" asp-for="AsnNumber" />
                </div>
                <span class="text-danger small">@Html.ValidationMessageFor(m => m.AsnNumber)</span>
            </div>

            <div class="col-12 col-lg-6">
                <label class="form-label">Document Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-file-text"></i></span>
                    <input class="form-control" asp-for="DocumentNumber" />
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <label class="form-label">Supplier</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                    <input class="form-control" asp-for="SupplierName" />
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <label class="form-label">Expected Arrival</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                    <input class="form-control" type="date" asp-for="ExpectedArrivalDate" />
                </div>
            </div>

            <div class="col-12">
                <label class="form-label">Notes</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-journal-text"></i></span>
                    <textarea class="form-control" asp-for="Notes" rows="3"></textarea>
                </div>
            </div>

            <div class="col-12 d-flex justify-content-end gap-2">
                <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check2-circle"></i> Create ASN
                </button>
            </div>
        </form>
    </div>
</div>
