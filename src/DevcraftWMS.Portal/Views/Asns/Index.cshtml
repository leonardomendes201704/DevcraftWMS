@model DevcraftWMS.Portal.ViewModels.Asns.AsnListViewModel
@{
    ViewData["Title"] = "ASNs";
    var totalPages = Model.Query.PageSize > 0 ? (int)Math.Ceiling(Model.TotalCount / (double)Model.Query.PageSize) : 1;
    string StatusLabel(int status) => status switch
    {
        0 => "Registered",
        1 => "Pending",
        2 => "Approved",
        3 => "Converted",
        4 => "Canceled",
        _ => $"Status {status}"
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">ASNs</h1>
        <div class="text-muted">Advance shipping notices submitted by customers.</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="#asnHelp" data-bs-toggle="modal">
            <i class="bi bi-question-circle"></i> Help
        </a>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-lg"></i> New ASN
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-lg-4">
                <label class="form-label">Warehouse</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                    <select class="form-select" name="WarehouseId">
                        <option value="">Select...</option>
                        @foreach (var warehouse in Model.Warehouses)
                        {
                            <option value="@warehouse.Id" selected="@(Model.Query.WarehouseId == warehouse.Id)">
                                @warehouse.Code - @warehouse.Name
                            </option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <label class="form-label">ASN Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                    <input class="form-control" name="AsnNumber" value="@Model.Query.AsnNumber" />
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <label class="form-label">Supplier</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                    <input class="form-control" name="SupplierName" value="@Model.Query.SupplierName" />
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <label class="form-label">Document Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-file-text"></i></span>
                    <input class="form-control" name="DocumentNumber" value="@Model.Query.DocumentNumber" />
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <label class="form-label">Expected From</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                    <input class="form-control" type="date" name="ExpectedFrom" value="@(Model.Query.ExpectedFrom?.ToString("yyyy-MM-dd"))" />
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <label class="form-label">Expected To</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-check"></i></span>
                    <input class="form-control" type="date" name="ExpectedTo" value="@(Model.Query.ExpectedTo?.ToString("yyyy-MM-dd"))" />
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label">Status</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-flag"></i></span>
                    <input class="form-control" name="Status" value="@Model.Query.Status" placeholder="Registered" />
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label">Active</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-check-circle"></i></span>
                    <select class="form-select" name="IsActive">
                        <option value="">Select...</option>
                        <option value="true" selected="@(Model.Query.IsActive == true)">Yes</option>
                        <option value="false" selected="@(Model.Query.IsActive == false)">No</option>
                    </select>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label">Order By</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-sort-alpha-down"></i></span>
                    <select class="form-select" name="OrderBy">
                        <option value="CreatedAtUtc" selected="@(Model.Query.OrderBy == "CreatedAtUtc")">Created</option>
                        <option value="AsnNumber" selected="@(Model.Query.OrderBy == "AsnNumber")">ASN Number</option>
                        <option value="ExpectedArrivalDate" selected="@(Model.Query.OrderBy == "ExpectedArrivalDate")">Expected Arrival</option>
                        <option value="SupplierName" selected="@(Model.Query.OrderBy == "SupplierName")">Supplier</option>
                        <option value="Status" selected="@(Model.Query.OrderBy == "Status")">Status</option>
                    </select>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label">Order Dir</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-sort-down"></i></span>
                    <select class="form-select" name="OrderDir">
                        <option value="desc" selected="@(Model.Query.OrderDir == "desc")">Desc</option>
                        <option value="asc" selected="@(Model.Query.OrderDir == "asc")">Asc</option>
                    </select>
                </div>
            </div>
            <div class="col-12 d-flex justify-content-end gap-2">
                <a class="btn btn-outline-secondary" asp-action="Index">Clear</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel"></i> Apply filters
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="text-muted">Total: @Model.TotalCount</div>
            <div class="text-muted">Page @Model.Query.PageNumber of @Math.Max(totalPages, 1)</div>
        </div>
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>ASN Number</th>
                        <th>Supplier</th>
                        <th>Document</th>
                        <th>Warehouse</th>
                        <th>Status</th>
                        <th>Expected</th>
                        <th>Items</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No ASNs found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var asn in Model.Items)
                        {
                            <tr>
                                <td class="fw-semibold">@asn.AsnNumber</td>
                                <td>@asn.SupplierName</td>
                                <td>@asn.DocumentNumber</td>
                                <td>@asn.WarehouseName</td>
                                <td><span class="badge bg-primary-subtle text-primary">@StatusLabel(asn.Status)</span></td>
                                <td>@(asn.ExpectedArrivalDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                                <td>@asn.ItemsCount</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@asn.Id">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="asnHelp" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">ASN Help</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Overview</h6>
                <p>ASNs (Advance Shipping Notices) register inbound shipments before they arrive. Use this list to track status and follow up with backoffice.</p>

                <h6>Filters</h6>
                <ul>
                    <li>Warehouse, ASN Number, Supplier, and Document Number narrow the list.</li>
                    <li>Expected From/To filters by expected arrival date window.</li>
                    <li>Status/Active help focus on active inbound flows.</li>
                </ul>

                <h6>Create flow</h6>
                <ol>
                    <li>Click <strong>New ASN</strong>.</li>
                    <li>Select a warehouse, enter ASN number, supplier, and expected arrival.</li>
                    <li>Save to generate the ASN record.</li>
                </ol>

                <h6>Details</h6>
                <p>Use the <strong>View</strong> button to inspect ASN metadata and upload attachments (XML/PDF/images).</p>
            </div>
        </div>
    </div>
</div>
