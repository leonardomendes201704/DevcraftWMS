@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty;
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty;
    string Active(string name, string? actionName = null)
    {
        if (!controller.Equals(name, StringComparison.OrdinalIgnoreCase))
        {
            return string.Empty;
        }

        return actionName is null || action.Equals(actionName, StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty;
    }
}
