@model DevcraftWMS.Portal.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="text-danger mb-3">An error occurred.</h4>
        <p class="text-muted">Please try again. If the issue persists, contact support.</p>

        @if (Model.ShowRequestId)
        {
            <p class="small text-muted mb-0">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
    </div>
</div>
