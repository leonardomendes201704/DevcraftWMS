{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ApiBaseUrl": "http://localhost:5137",
  "ExternalServices": {
    "Ibge": {
      "BaseUrl": "https://servicodados.ibge.gov.br",
      "StatesPath": "/api/v1/localidades/estados?orderBy=nome",
      "CitiesByStatePath": "/api/v1/localidades/estados/{uf}/municipios"
    },
    "ViaCep": {
      "BaseUrl": "https://viacep.com.br",
      "LookupPath": "/ws/{cep}/json/"
    }
  },
  "Telemetry": {
    "Enabled": true,
    "EndpointPath": "/api/telemetry/client-events",
    "BatchSize": 20,
    "FlushIntervalMs": 2000,
    "QueueCapacity": 500,
    "SlowCallThresholdMs": 1500,
    "RetryCount": 2,
    "InternalKeyHeader": "X-Internal-Telemetry-Key",
    "InternalKey": "dev-telemetry-key-change-me",
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "BreakDurationSeconds": 30
    }
  },
  "Demo": {
    "AdminEmail": "admin@admin.com.br"
  },
  "AllowedHosts": "*"
}
