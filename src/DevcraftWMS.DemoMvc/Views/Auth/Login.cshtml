@model LoginViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
    ViewData["Subtitle"] = "Store a JWT or authenticate with email/password";
}

<div class="d-flex justify-content-end mb-3">
    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#loginHelp">
        <i class="bi bi-question-circle me-1"></i>Help
    </button>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Login with API credentials</h5>
                <form method="post" asp-action="Login">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <span class="text-danger small" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <span class="text-danger small" asp-validation-for="Password"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Paste a JWT token</h5>
                <form method="post" asp-action="Login">
                    <input type="hidden" name="mode" value="token" />
                    <div class="mb-3">
                        <label class="form-label">Token</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                            <textarea asp-for="Token" class="form-control" rows="6"></textarea>
                        </div>
                        <span class="text-danger small" asp-validation-for="Token"></span>
                    </div>
                    <button class="btn btn-outline-primary" type="submit">Store Token</button>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_LoginHelp" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
