@model DevcraftWMS.DemoMvc.ViewModels.Products.ProductFormViewModel
@{
    ViewData["Title"] = "New Product";
    ViewData["Subtitle"] = "Create a new SKU";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <partial name="_ProductForm" model="Model" />
            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-light border" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
