@using DevcraftWMS.DemoMvc.ViewModels.Shared
@model DevcraftWMS.DemoMvc.ViewModels.Lots.LotDetailViewModel
@{
    ViewData["Title"] = "Lot Details";
    ViewData["Subtitle"] = Model.Code;

    var coreInfo = new InfoListViewModel
    {
        Title = "Core details",
        Items = new List<InfoListItem>
        {
            new() { Label = "Code", Value = Model.Code },
            new() { Label = "Product", Value = Model.ProductId.ToString() },
            new() { Label = "Manufacture date", Value = Model.ManufactureDate?.ToString("yyyy-MM-dd") ?? "-" },
            new() { Label = "Expiration date", Value = Model.ExpirationDate?.ToString("yyyy-MM-dd") ?? "-" },
            new() { Label = "Status", Value = Model.Status.ToString(), BadgeText = Model.Status.ToString(), BadgeCssClass = "text-bg-info" },
            new() { Label = "Quarantined at", Value = Model.QuarantinedAtUtc?.ToLocalTime().ToString("g") ?? "-" },
            new() { Label = "Quarantine reason", Value = Model.QuarantineReason ?? "-" },
            new() { Label = "Active", Value = Model.IsActive ? "Active" : "Inactive", BadgeText = Model.IsActive ? "Active" : "Inactive", BadgeCssClass = Model.IsActive ? "text-bg-success" : "text-bg-secondary" },
            new() { Label = "Created", Value = Model.CreatedAtUtc.ToLocalTime().ToString("g") }
        }
    };
}

<div class="card mb-3">
    <div class="card-body d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Deactivate</a>
        <a class="btn btn-light border" asp-action="Index" asp-route-productId="@Model.ProductId">Back</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-6">
        <partial name="_InfoList" model="coreInfo" />
    </div>
</div>
