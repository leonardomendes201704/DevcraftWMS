@model DevcraftWMS.DemoMvc.ViewModels.Zones.ZoneFormViewModel
@{
    ViewData["Title"] = "Edit Zone";
    ViewData["Subtitle"] = "Update zone information";
}

<form method="post">
    @Html.AntiForgeryToken()
    <partial name="_ZoneForm" model="Model" />
    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-light border" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
    </div>
</form>
