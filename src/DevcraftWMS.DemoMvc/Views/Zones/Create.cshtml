@model DevcraftWMS.DemoMvc.ViewModels.Zones.ZoneFormViewModel
@{
    ViewData["Title"] = "Create Zone";
    ViewData["Subtitle"] = "Register a new warehouse zone";
}

<form method="post">
    @Html.AntiForgeryToken()
    <partial name="_ZoneForm" model="Model" />
    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn btn-light border" asp-action="Index">Cancel</a>
    </div>
</form>
