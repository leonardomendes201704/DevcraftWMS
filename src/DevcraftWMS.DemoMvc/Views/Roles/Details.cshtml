@model DevcraftWMS.DemoMvc.ViewModels.Roles.RoleDetailsPageViewModel
@{
    ViewData["Title"] = "Role Details";
    ViewData["Subtitle"] = Model.Role.Name;
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <div>
                <h5 class="mb-1">@Model.Role.Name</h5>
                <div class="text-muted">@Model.Role.Description</div>
            </div>
            <div>
                @if (Model.Role.IsActive)
                {
                    <span class="badge text-bg-success">Active</span>
                }
                else
                {
                    <span class="badge text-bg-secondary">Inactive</span>
                }
            </div>
        </div>

        <h6 class="mt-4">Permissions</h6>
        <div class="border rounded p-3 bg-light">
            @if (Model.Role.Permissions.Count == 0)
            {
                <div class="text-muted">No permissions assigned.</div>
            }
            else
            {
                <ul class="mb-0">
                    @foreach (var permission in Model.Role.Permissions)
                    {
                        <li>@permission.Code - @permission.Name</li>
                    }
                </ul>
            }
        </div>

        <div class="mt-4 d-flex gap-2">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Role.Id">Edit</a>
            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Role.Id">Deactivate</a>
            <a class="btn btn-light border" asp-action="Index">Back</a>
        </div>
    </div>
</div>
