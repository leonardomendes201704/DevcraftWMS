@model DevcraftWMS.DemoMvc.ViewModels.Roles.RoleDetailsPageViewModel
@{
    ViewData["Title"] = "Deactivate Role";
    ViewData["Subtitle"] = Model.Role.Name;
}

<div class="card">
    <div class="card-body">
        <p>Are you sure you want to deactivate this role?</p>
        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Role.Name</dd>
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Role.Description</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Role.Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Deactivate</button>
                <a class="btn btn-light border" asp-action="Details" asp-route-id="@Model.Role.Id">Cancel</a>
            </div>
        </form>
    </div>
</div>
