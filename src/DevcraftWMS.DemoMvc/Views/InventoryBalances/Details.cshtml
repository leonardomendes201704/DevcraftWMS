@using DevcraftWMS.DemoMvc.ViewModels.Shared
@model DevcraftWMS.DemoMvc.ViewModels.InventoryBalances.InventoryBalanceDetailViewModel
@{
    ViewData["Title"] = "Inventory Balance Details";
    ViewData["Subtitle"] = $"Balance {Model.Id}";

    var coreInfo = new InfoListViewModel
    {
        Title = "Core details",
        Items = new List<InfoListItem>
        {
            new() { Label = "Location", Value = Model.LocationId.ToString() },
            new() { Label = "Product", Value = Model.ProductId.ToString() },
            new() { Label = "Lot", Value = Model.LotId?.ToString() ?? "-" },
            new() { Label = "Status", Value = Model.Status.ToString(), BadgeText = Model.Status.ToString(), BadgeCssClass = "text-bg-info" },
            new() { Label = "Active", Value = Model.IsActive ? "Active" : "Inactive", BadgeText = Model.IsActive ? "Active" : "Inactive", BadgeCssClass = Model.IsActive ? "text-bg-success" : "text-bg-secondary" },
            new() { Label = "Created", Value = Model.CreatedAtUtc.ToLocalTime().ToString("g") }
        }
    };

    var qtyInfo = new InfoListViewModel
    {
        Title = "Quantities",
        Items = new List<InfoListItem>
        {
            new() { Label = "On Hand", Value = Model.QuantityOnHand.ToString("N2") },
            new() { Label = "Reserved", Value = Model.QuantityReserved.ToString("N2") },
            new() { Label = "Available", Value = Model.QuantityAvailable.ToString("N2") }
        }
    };
}

<div class="card mb-3">
    <div class="card-body d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Deactivate</a>
        <a class="btn btn-light border" asp-action="Index">Back</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-6">
        <partial name="_InfoList" model="coreInfo" />
    </div>
    <div class="col-lg-6">
        <partial name="_InfoList" model="qtyInfo" />
    </div>
</div>
