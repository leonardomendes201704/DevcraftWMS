@model DevcraftWMS.DemoMvc.ViewModels.InventoryBalances.InventoryBalanceFormViewModel
@{
    ViewData["Title"] = "Edit Inventory Balance";
    ViewData["Subtitle"] = "Update stock quantities and status";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <partial name="_InventoryBalanceForm" model="Model" />
            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="submit" class="btn btn-outline-secondary" formmethod="get" formaction="@Url.Action("Edit", "InventoryBalances", new { id = Model.Id })">Reload options</button>
                <a class="btn btn-light border" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
