@model DevcraftWMS.DemoMvc.ViewModels.InventoryBalances.InventoryBalanceFormViewModel
@{
    ViewData["Title"] = "New Inventory Balance";
    ViewData["Subtitle"] = "Register stock at a location";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <partial name="_InventoryBalanceForm" model="Model" />
            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="submit" class="btn btn-outline-secondary" formmethod="get" formaction="@Url.Action("Create", "InventoryBalances")">Reload options</button>
                <a class="btn btn-light border" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
