@model DevcraftWMS.DemoMvc.ViewModels.PutawayTasks.PutawayTaskDetailsPageViewModel
@{
    ViewData["Title"] = $"Putaway Task {Model.Task.SsccInternal}";
    ViewData["Subtitle"] = "Putaway task details";

    var statusBadge = Model.Task.Status switch
    {
        DevcraftWMS.DemoMvc.Enums.PutawayTaskStatus.Completed => "text-bg-success",
        DevcraftWMS.DemoMvc.Enums.PutawayTaskStatus.InProgress => "text-bg-warning",
        DevcraftWMS.DemoMvc.Enums.PutawayTaskStatus.Canceled => "text-bg-secondary",
        _ => "text-bg-info"
    };

    var summary = new List<KeyValuePair<string, string>>
    {
        new("SSCC", Model.Task.SsccInternal),
        new("Receipt", Model.Task.ReceiptNumber),
        new("Warehouse", Model.Task.WarehouseName),
        new("Assigned To", Model.Task.AssignedToUserEmail ?? "Unassigned"),
        new("Status", Model.Task.Status.ToString()),
        new("Created", Model.Task.CreatedAtUtc.ToLocalTime().ToString("g"))
    };
}

<div class="d-flex justify-content-between align-items-start mb-3">
    <div>
        <a class="btn btn-outline-secondary btn-sm" asp-controller="PutawayTasks" asp-action="Index">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>
    <span class="badge @statusBadge">@Model.Task.Status</span>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row g-3">
            @foreach (var item in summary)
            {
                <div class="col-md-4">
                    <div class="text-muted small">@item.Key</div>
                    <div class="fw-semibold">@item.Value</div>
                </div>
            }
        </div>
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="fw-semibold">Suggested Locations</div>
        <span class="text-muted small">Top @Model.Suggestions.Count</span>
    </div>
    <div class="card-body">
        @if (Model.Suggestions.Count == 0)
        {
            <div class="text-muted">No suggestions available.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Location</th>
                            <th>Zone</th>
                            <th>Score</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var suggestion in Model.Suggestions)
                        {
                            <tr>
                                <td class="fw-semibold">@suggestion.LocationCode</td>
                                <td>@suggestion.ZoneName (@(suggestion.ZoneType?.ToString() ?? "-"))</td>
                                <td>@suggestion.Score</td>
                                <td>@suggestion.Reason</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header">
        <div class="fw-semibold">Reassign Putaway Task</div>
    </div>
    <div class="card-body">
        @if (Model.Task.Status == DevcraftWMS.DemoMvc.Enums.PutawayTaskStatus.Completed)
        {
            <div class="alert alert-success mb-0">Putaway already completed.</div>
        }
        else if (Model.Task.Status == DevcraftWMS.DemoMvc.Enums.PutawayTaskStatus.Canceled)
        {
            <div class="alert alert-secondary mb-0">Putaway task is canceled.</div>
        }
        else
        {
            <form asp-controller="PutawayTasks" asp-action="Reassign" asp-route-id="@Model.Task.Id" method="post" class="vstack gap-3">
                @Html.AntiForgeryToken()
                <div>
                    <label class="form-label">Assignee email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-check"></i></span>
                        <input class="form-control" name="AssigneeEmail" type="email" placeholder="user@example.com" required />
                    </div>
                </div>
                <div>
                    <label class="form-label">Reason</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-chat-text"></i></span>
                        <textarea class="form-control" name="Reason" rows="3" placeholder="Reason for reassignment" required></textarea>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-repeat me-1"></i>Reassign
                    </button>
                </div>
            </form>
        }
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header">
        <div class="fw-semibold">Assignment History</div>
    </div>
    <div class="card-body">
        @if (Model.Task.AssignmentHistory.Count == 0)
        {
            <div class="text-muted">No reassignment events yet.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>From</th>
                            <th>To</th>
                            <th>Reason</th>
                            <th>Assigned At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evt in Model.Task.AssignmentHistory)
                        {
                            <tr>
                                <td>@(evt.FromUserEmail ?? "-")</td>
                                <td class="fw-semibold">@evt.ToUserEmail</td>
                                <td>@evt.Reason</td>
                                <td>@evt.AssignedAtUtc.ToLocalTime().ToString("g")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header">
        <div class="fw-semibold">Confirm Putaway</div>
    </div>
    <div class="card-body">
        @if (Model.Task.Status == DevcraftWMS.DemoMvc.Enums.PutawayTaskStatus.Completed)
        {
            <div class="alert alert-success mb-0">Putaway already completed.</div>
        }
        else if (Model.Task.Status == DevcraftWMS.DemoMvc.Enums.PutawayTaskStatus.Canceled)
        {
            <div class="alert alert-secondary mb-0">Putaway task is canceled.</div>
        }
        else
        {
            <form asp-controller="PutawayTasks" asp-action="Confirm" asp-route-id="@Model.Task.Id" method="post" class="vstack gap-3">
                @Html.AntiForgeryToken()
                <div>
                    <label class="form-label">Destination location</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                        <select class="form-select" name="LocationId" required>
                            @foreach (var option in Model.Confirm.LocationOptions)
                            {
                                <option value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div>
                    <label class="form-label">Notes</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                        <textarea class="form-control" name="Notes" rows="3" placeholder="Optional notes">@Model.Confirm.Notes</textarea>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle me-1"></i>Confirm Putaway
                    </button>
                </div>
            </form>
        }
    </div>
</div>
