@model DevcraftWMS.DemoMvc.ViewModels.Warehouses.WarehouseFormViewModel
@{
    ViewData["Title"] = "New Warehouse";
    ViewData["Subtitle"] = "Register a new warehouse";
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_WarehouseForm" model="Model" />
        </div>
        <div class="card-footer d-flex gap-2">
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-light border" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/address-lookup.js" asp-append-version="true"></script>
}
