@model DevcraftWMS.DemoMvc.ViewModels.Users.UserEditViewModel
@{
    ViewData["Title"] = "Edit User";
    ViewData["Subtitle"] = Model.Email;
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="row g-3">
                <div class="col-lg-6">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input class="form-control" asp-for="Email" />
                    </div>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="col-lg-6">
                    <label class="form-label">Full name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input class="form-control" asp-for="FullName" />
                    </div>
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
            </div>

            <div class="mt-4">
                <label class="form-label">Roles</label>
                <div class="border rounded p-3 bg-light">
                    @if (Model.AvailableRoles.Count == 0)
                    {
                        <div class="text-muted">No roles available.</div>
                    }
                    else
                    {
                        <div class="row g-2">
                            @foreach (var role in Model.AvailableRoles)
                            {
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="RoleIds" value="@role.Value" checked="@(role.Selected)" />
                                        <label class="form-check-label">@role.Text</label>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-light border" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
            </div>
        </form>
    </div>
</div>
