@model DevcraftWMS.DemoMvc.ViewModels.Users.UserDetailsPageViewModel
@{
    ViewData["Title"] = "User Details";
    ViewData["Subtitle"] = Model.User.Email;
}

<div class="card">
    <div class="card-body">
        <dl class="row mb-4">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.User.Email</dd>
            <dt class="col-sm-3">Full name</dt>
            <dd class="col-sm-9">@Model.User.FullName</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.User.IsActive)
                {
                    <span class="badge text-bg-success">Active</span>
                }
                else
                {
                    <span class="badge text-bg-secondary">Inactive</span>
                }
            </dd>
            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.User.CreatedAtUtc.ToLocalTime().ToString("g")</dd>
            <dt class="col-sm-3">Roles</dt>
            <dd class="col-sm-9">
                @if (Model.User.Roles.Count == 0)
                {
                    <span class="text-muted">No roles assigned.</span>
                }
                else
                {
                    <ul class="mb-0">
                        @foreach (var role in Model.User.Roles)
                        {
                            <li>@role</li>
                        }
                    </ul>
                }
            </dd>
        </dl>

        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.User.Id">Edit</a>
            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.User.Id" />
                <button type="submit" class="btn btn-outline-warning">Reset Password</button>
            </form>
            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.User.Id">Deactivate</a>
            <a class="btn btn-light border" asp-action="Index">Back</a>
        </div>
    </div>
</div>
