@model DevcraftWMS.DemoMvc.ViewModels.InventoryMovements.InventoryMovementDetailViewModel
@{
    ViewData["Title"] = "Inventory Movement";
    ViewData["Subtitle"] = "Movement details";

    var statusBadge = Model.Status switch
    {
        DevcraftWMS.DemoMvc.Enums.InventoryMovementStatus.Completed => "text-bg-success",
        DevcraftWMS.DemoMvc.Enums.InventoryMovementStatus.InProgress => "text-bg-warning",
        DevcraftWMS.DemoMvc.Enums.InventoryMovementStatus.Canceled => "text-bg-secondary",
        _ => "text-bg-light"
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-outline-secondary btn-sm" asp-controller="InventoryMovements" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="text-muted small">Status</div>
                <span class="badge @statusBadge">@Model.Status</span>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Performed At</div>
                <div class="fw-semibold">@Model.PerformedAtUtc.ToLocalTime().ToString("g")</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Quantity</div>
                <div class="fw-semibold">@Model.Quantity.ToString("N3")</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Active</div>
                <span class="badge @(Model.IsActive ? "text-bg-success" : "text-bg-secondary")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">Product</div>
                <div class="fw-semibold">@Model.ProductCode - @Model.ProductName</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Lot</div>
                <div class="fw-semibold">@(Model.LotCode ?? "-")</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Reference</div>
                <div class="fw-semibold">@(Model.Reference ?? "-")</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">From Location</div>
                <div class="fw-semibold">@Model.FromLocationCode</div>
            </div>
            <div class="col-md-6">
                <div class="text-muted small">To Location</div>
                <div class="fw-semibold">@Model.ToLocationCode</div>
            </div>

            <div class="col-md-12">
                <div class="text-muted small">Reason</div>
                <div class="fw-semibold">@(Model.Reason ?? "-")</div>
            </div>

            <div class="col-md-3">
                <div class="text-muted small">Created</div>
                <div class="fw-semibold">@Model.CreatedAtUtc.ToLocalTime().ToString("g")</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Updated</div>
                <div class="fw-semibold">@(Model.UpdatedAtUtc?.ToLocalTime().ToString("g") ?? "-")</div>
            </div>
        </div>
    </div>
</div>
