@model DevcraftWMS.DemoMvc.ViewModels.Locations.LocationFormViewModel

<div class="row g-3">
    <div class="col-md-4">
        <label class="form-label">Warehouse</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-box-seam"></i></span>
            <select class="form-select" asp-for="WarehouseId" asp-items="Model.Warehouses" data-location-warehouse>
                <option value="">Select</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="WarehouseId"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Sector</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-grid-3x3-gap"></i></span>
            <select class="form-select" asp-for="SectorId" asp-items="Model.Sectors" data-location-sector>
                <option value="">Select</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="SectorId"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Section</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-layout-text-sidebar"></i></span>
            <select class="form-select" asp-for="SectionId" asp-items="Model.Sections" data-location-section>
                <option value="">Select</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="SectionId"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Structure</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-stack"></i></span>
            <select class="form-select" asp-for="StructureId" asp-items="Model.Structures" data-location-structure>
                <option value="">Select</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="StructureId"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Zone</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-diagram-3"></i></span>
            <select class="form-select" asp-for="ZoneId" asp-items="Model.Zones" data-location-zone>
                <option value="">Select...</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="ZoneId"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Code</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-hash"></i></span>
            <input class="form-control" asp-for="Code" />
        </div>
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Barcode</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
            <input class="form-control" asp-for="Barcode" />
        </div>
        <span class="text-danger" asp-validation-for="Barcode"></span>
    </div>
    <div class="col-md-2">
        <label class="form-label">Level</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-layers"></i></span>
            <input class="form-control" asp-for="Level" type="number" min="1" max="200" />
        </div>
        <span class="text-danger" asp-validation-for="Level"></span>
    </div>
    <div class="col-md-2">
        <label class="form-label">Row</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-list-ol"></i></span>
            <input class="form-control" asp-for="Row" type="number" min="1" max="200" />
        </div>
        <span class="text-danger" asp-validation-for="Row"></span>
    </div>
    <div class="col-md-2">
        <label class="form-label">Column</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-columns-gap"></i></span>
            <input class="form-control" asp-for="Column" type="number" min="1" max="200" />
        </div>
        <span class="text-danger" asp-validation-for="Column"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Max Weight (kg)</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-weight"></i></span>
            <input class="form-control" asp-for="MaxWeightKg" type="number" step="0.001" min="0" inputmode="decimal" />
        </div>
        <span class="text-danger" asp-validation-for="MaxWeightKg"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Max Volume (mÂ³)</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-box"></i></span>
            <input class="form-control" asp-for="MaxVolumeM3" type="number" step="0.000001" min="0" inputmode="decimal" />
        </div>
        <span class="text-danger" asp-validation-for="MaxVolumeM3"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Allow Lot Tracking</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-tags"></i></span>
            <select class="form-select" asp-for="AllowLotTracking">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="AllowLotTracking"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Allow Expiry Tracking</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-hourglass-split"></i></span>
            <select class="form-select" asp-for="AllowExpiryTracking">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="AllowExpiryTracking"></span>
    </div>
</div>
