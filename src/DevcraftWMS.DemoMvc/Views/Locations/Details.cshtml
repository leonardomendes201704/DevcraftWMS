@using DevcraftWMS.DemoMvc.ViewModels.Shared
@model DevcraftWMS.DemoMvc.ViewModels.Locations.LocationDetailViewModel
@{
    ViewData["Title"] = "Location Details";
    ViewData["Subtitle"] = $"{Model.Code} - {Model.Barcode}";

    var coreInfo = new InfoListViewModel
    {
        Title = "Core details",
        Items = new List<InfoListItem>
        {
            new() { Label = "Code", Value = Model.Code },
            new() { Label = "Barcode", Value = Model.Barcode },
            new() { Label = "Warehouse", Value = Model.WarehouseName },
            new() { Label = "Sector", Value = Model.SectorName },
            new() { Label = "Section", Value = Model.SectionName },
            new() { Label = "Structure", Value = Model.StructureName },
            new() { Label = "Level", Value = Model.Level.ToString() },
            new() { Label = "Row", Value = Model.Row.ToString() },
            new() { Label = "Column", Value = Model.Column.ToString() },
            new() { Label = "Zone", Value = Model.ZoneName ?? "-" },
            new() { Label = "Max Weight (kg)", Value = Model.MaxWeightKg.HasValue ? Model.MaxWeightKg.Value.ToString("N3") : "-" },
            new() { Label = "Max Volume (mÂ³)", Value = Model.MaxVolumeM3.HasValue ? Model.MaxVolumeM3.Value.ToString("N6") : "-" },
            new() { Label = "Allow Lot Tracking", Value = Model.AllowLotTracking ? "Yes" : "No" },
            new() { Label = "Allow Expiry Tracking", Value = Model.AllowExpiryTracking ? "Yes" : "No" },
            new() { Label = "Status", Value = Model.IsActive ? "Active" : "Inactive", BadgeText = Model.IsActive ? "Active" : "Inactive", BadgeCssClass = Model.IsActive ? "text-bg-success" : "text-bg-secondary" },
            new() { Label = "Created", Value = Model.CreatedAtUtc.ToLocalTime().ToString("g") }
        }
    };
}

<div class="card mb-3">
    <div class="card-body d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Deactivate</a>
        <a class="btn btn-light border" asp-action="Index">Back</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-6">
        <partial name="_InfoList" model="coreInfo" />
    </div>
</div>
