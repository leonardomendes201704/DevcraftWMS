@model DevcraftWMS.DemoMvc.ViewModels.Asns.AsnFormViewModel
@{
    ViewData["Title"] = "Edit ASN";
    ViewData["Subtitle"] = $"ASN {Model.AsnNumber}";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h4 mb-1">Edit ASN</h1>
                <div class="text-muted small">Update ASN header data (registered status only).</div>
            </div>
            <a class="btn btn-light border" asp-action="Details" asp-route-id="@Model.Id">Back to details</a>
        </div>
    </div>
    <div class="card-body">
        <form method="post" asp-route-id="@Model.Id">
            <partial name="_Form" model="Model" />
            <div class="d-flex gap-2 mt-4">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-check2-circle"></i> Save changes
                </button>
                <a class="btn btn-light border" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
            </div>
        </form>
    </div>
</div>
