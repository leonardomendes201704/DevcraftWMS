@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Html
@using DevcraftWMS.DemoMvc.ViewModels.Shared
@model DevcraftWMS.DemoMvc.ViewModels.Asns.AsnListPageViewModel
@{
    ViewData["Title"] = "ASNs";
    ViewData["Subtitle"] = "Inbound pre-notices (ASN) queue";

    var queryOptions = new GridQueryOptions
    {
        Action = "Index",
        Controller = "Asns",
        OrderBy = Model.Query.OrderBy,
        OrderDir = Model.Query.OrderDir,
        PageSize = Model.Query.PageSize,
        Query = new Dictionary<string, string?>
        {
            ["WarehouseId"] = Model.Query.WarehouseId?.ToString(),
            ["AsnNumber"] = Model.Query.AsnNumber,
            ["SupplierName"] = Model.Query.SupplierName,
            ["DocumentNumber"] = Model.Query.DocumentNumber,
            ["Status"] = Model.Query.Status?.ToString(),
            ["ExpectedFrom"] = Model.Query.ExpectedFrom?.ToString("yyyy-MM-dd"),
            ["ExpectedTo"] = Model.Query.ExpectedTo?.ToString("yyyy-MM-dd"),
            ["IsActive"] = Model.Query.IsActive?.ToString(),
            ["IncludeInactive"] = Model.Query.IncludeInactive.ToString(),
            ["PageSize"] = Model.Query.PageSize.ToString()
        }
    };

    var statusOptions = new List<GridSelectOption>
    {
        new() { Value = string.Empty, Text = "Any", Selected = Model.Query.Status is null },
        new() { Value = "0", Text = "Registered", Selected = Model.Query.Status == 0 },
        new() { Value = "1", Text = "Pending", Selected = Model.Query.Status == 1 },
        new() { Value = "2", Text = "Approved", Selected = Model.Query.Status == 2 },
        new() { Value = "3", Text = "Converted", Selected = Model.Query.Status == 3 },
        new() { Value = "4", Text = "Canceled", Selected = Model.Query.Status == 4 }
    };

    var activeOptions = new List<GridSelectOption>
    {
        new() { Value = string.Empty, Text = "Any", Selected = Model.Query.IsActive is null },
        new() { Value = "true", Text = "Active", Selected = Model.Query.IsActive == true },
        new() { Value = "false", Text = "Inactive", Selected = Model.Query.IsActive == false }
    };

    var filters = new GridFilterViewModel
    {
        Action = "Index",
        Controller = "Asns",
        Fields = new List<GridFilterField>
        {
            new() { Name = "OrderBy", Value = Model.Query.OrderBy, IsHidden = true },
            new() { Name = "OrderDir", Value = Model.Query.OrderDir, IsHidden = true },
            new() { Label = "ASN Number", Name = "AsnNumber", Type = GridFilterType.Text, Value = Model.Query.AsnNumber, IconClass = "bi-hash" },
            new() { Label = "Warehouse", Name = "WarehouseId", Type = GridFilterType.Select, Options = Model.Warehouses.Select(w => new GridSelectOption { Value = w.Value ?? string.Empty, Text = w.Text ?? string.Empty, Selected = w.Selected }).ToList(), IconClass = "bi-building" },
            new() { Label = "Supplier", Name = "SupplierName", Type = GridFilterType.Text, Value = Model.Query.SupplierName, IconClass = "bi-person-badge" },
            new() { Label = "Document", Name = "DocumentNumber", Type = GridFilterType.Text, Value = Model.Query.DocumentNumber, IconClass = "bi-file-earmark-text" },
            new() { Label = "Status", Name = "Status", Type = GridFilterType.Select, Options = statusOptions, IconClass = "bi-circle-half" },
            new() { Label = "Expected From", Name = "ExpectedFrom", Type = GridFilterType.Date, Value = Model.Query.ExpectedFrom?.ToString("yyyy-MM-dd"), IconClass = "bi-calendar" },
            new() { Label = "Expected To", Name = "ExpectedTo", Type = GridFilterType.Date, Value = Model.Query.ExpectedTo?.ToString("yyyy-MM-dd"), IconClass = "bi-calendar-check" },
            new() { Label = "Active", Name = "IsActive", Type = GridFilterType.Select, Options = activeOptions, IconClass = "bi-toggle-on" },
            new()
            {
                Label = "Include inactive",
                Name = "IncludeInactive",
                Type = GridFilterType.Select,
                Options = new List<GridSelectOption>
                {
                    new() { Value = "false", Text = "No", Selected = Model.Query.IncludeInactive == false },
                    new() { Value = "true", Text = "Yes", Selected = Model.Query.IncludeInactive }
                },
                IconClass = "bi-eye"
            },
            new()
            {
                Label = "Page Size",
                Name = "PageSize",
                Type = GridFilterType.Select,
                Options = new List<GridSelectOption>
                {
                    new() { Value = "10", Text = "10", Selected = Model.Query.PageSize == 10 },
                    new() { Value = "25", Text = "25", Selected = Model.Query.PageSize == 25 },
                    new() { Value = "50", Text = "50", Selected = Model.Query.PageSize == 50 }
                }
            }
        },
        ShowReset = true,
        ResetUrl = Url.Action("Index", "Asns")
    };

    var filterDrawer = new FilterDrawerViewModel
    {
        Id = "asnFilters",
        Title = "ASN filters",
        Filters = filters,
        ButtonText = "Filters",
        ButtonCssClass = "btn btn-outline-primary"
    };

    var grid = new GridBuilder<DevcraftWMS.DemoMvc.ViewModels.Asns.AsnListItemViewModel>()
        .WithTitle("ASNs")
        .WithSubtitle($"Total: {Model.Pagination.TotalCount}")
        .WithItems(Model.Items)
        .WithPagination(Model.Pagination)
        .WithQueryOptions(queryOptions)
        .WithTableCssClass("table align-middle mb-0 grid-table")
        .WithFilters(filters)
        .AddColumn("ASN", item => new HtmlString(HtmlEncoder.Default.Encode(item.AsnNumber)), "AsnNumber")
        .AddColumn("Warehouse", item => new HtmlString(HtmlEncoder.Default.Encode(item.WarehouseName)), "WarehouseName")
        .AddColumn("Supplier", item => new HtmlString(HtmlEncoder.Default.Encode(item.SupplierName ?? "-")), "SupplierName")
        .AddColumn("Document", item => new HtmlString(HtmlEncoder.Default.Encode(item.DocumentNumber ?? "-")), "DocumentNumber")
        .AddColumn("Status", item => new HtmlString(item.Status switch
        {
            0 => "Registered",
            1 => "Pending",
            2 => "Approved",
            3 => "Converted",
            4 => "Canceled",
            _ => $"Status {item.Status}"
        }), "Status")
        .AddColumn("Expected", item => new HtmlString(item.ExpectedArrivalDate?.ToString("yyyy-MM-dd") ?? "-"), "ExpectedArrivalDate")
        .AddColumn("Items", item => new HtmlString(item.ItemsCount.ToString()), "ItemsCount")
        .AddColumn("Created", item => new HtmlString(item.CreatedAtUtc.ToLocalTime().ToString("g")), "CreatedAtUtc")
        .AddAction("View", item => Url.Action("Details", "Asns", new { id = item.Id }), "btn btn-sm btn-outline-primary", "bi bi-search")
        .AddAction("Edit", item => Url.Action("Edit", "Asns", new { id = item.Id }), "btn btn-sm btn-outline-secondary", "bi bi-pencil")
        .Build();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">ASNs</h1>
        <div class="text-muted">Inbound pre-notices and supplier scheduling</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="#asnHelp" data-bs-toggle="modal">
            <i class="bi bi-question-circle"></i> Help
        </a>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-lg"></i> New ASN
        </a>
    </div>
</div>

<partial name="_FilterDrawer" model="filterDrawer" />
<partial name="_Grid" model="grid" />

<div class="modal fade" id="asnHelp" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">ASN Help</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>ASNs (Advance Shipping Notices) register inbound shipments before they arrive. Use this list to track and manage inbound expectations.</p>
                <ul>
                    <li>Use filters to narrow by warehouse, supplier, or expected arrival window.</li>
                    <li>Click <strong>New ASN</strong> to register a shipment.</li>
                    <li>Open <strong>Details</strong> to manage items, attachments, and status transitions.</li>
                </ul>
            </div>
        </div>
    </div>
</div>
