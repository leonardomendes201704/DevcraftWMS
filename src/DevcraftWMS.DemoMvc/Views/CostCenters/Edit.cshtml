@model DevcraftWMS.DemoMvc.ViewModels.CostCenters.CostCenterFormViewModel
@{
    ViewData["Title"] = "Edit Cost Center";
    ViewData["Subtitle"] = "Update cost center details";
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_CostCenterForm" model="Model" />
        </div>
        <div class="card-footer d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-light border" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
