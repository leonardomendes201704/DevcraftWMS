@model DevcraftWMS.DemoMvc.ViewModels.Aisles.AisleFormViewModel

<div class="row g-3">
    <div class="col-md-4">
        <label class="form-label">Section</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-layout-text-sidebar"></i></span>
            <select class="form-select" asp-for="SectionId" asp-items="Model.Sections">
                <option value="">Select</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="SectionId"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Code</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-hash"></i></span>
            <input class="form-control" asp-for="Code" />
        </div>
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>
    <div class="col-md-5">
        <label class="form-label">Name</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-tag"></i></span>
            <input class="form-control" asp-for="Name" />
        </div>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
</div>
