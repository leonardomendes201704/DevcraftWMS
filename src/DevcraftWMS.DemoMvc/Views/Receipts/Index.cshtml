@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Html
@model DevcraftWMS.DemoMvc.ViewModels.Receipts.ReceiptListPageViewModel
@{
    ViewData["Title"] = "Receipts";
    ViewData["Subtitle"] = "Inbound receipts with allocation and status tracking";

    var queryOptions = new GridQueryOptions
    {
        Action = "Index",
        Controller = "Receipts",
        OrderBy = Model.Query.OrderBy,
        OrderDir = Model.Query.OrderDir,
        PageSize = Model.Query.PageSize,
        Query = new Dictionary<string, string?>
        {
            ["WarehouseId"] = Model.Query.WarehouseId?.ToString(),
            ["ReceiptNumber"] = Model.Query.ReceiptNumber,
            ["DocumentNumber"] = Model.Query.DocumentNumber,
            ["SupplierName"] = Model.Query.SupplierName,
            ["Status"] = Model.Query.Status?.ToString(),
            ["ReceivedFrom"] = Model.Query.ReceivedFrom?.ToString("yyyy-MM-dd"),
            ["ReceivedTo"] = Model.Query.ReceivedTo?.ToString("yyyy-MM-dd"),
            ["IsActive"] = Model.Query.IsActive?.ToString(),
            ["IncludeInactive"] = Model.Query.IncludeInactive.ToString(),
            ["PageSize"] = Model.Query.PageSize.ToString()
        }
    };

    var statusOptions = new List<GridSelectOption>
    {
        new() { Value = string.Empty, Text = "Any", Selected = Model.Query.Status is null },
        new() { Value = DevcraftWMS.DemoMvc.Enums.ReceiptStatus.Draft.ToString(), Text = "Draft", Selected = Model.Query.Status == DevcraftWMS.DemoMvc.Enums.ReceiptStatus.Draft },
        new() { Value = DevcraftWMS.DemoMvc.Enums.ReceiptStatus.InProgress.ToString(), Text = "In progress", Selected = Model.Query.Status == DevcraftWMS.DemoMvc.Enums.ReceiptStatus.InProgress },
        new() { Value = DevcraftWMS.DemoMvc.Enums.ReceiptStatus.Completed.ToString(), Text = "Completed", Selected = Model.Query.Status == DevcraftWMS.DemoMvc.Enums.ReceiptStatus.Completed },
        new() { Value = DevcraftWMS.DemoMvc.Enums.ReceiptStatus.Canceled.ToString(), Text = "Canceled", Selected = Model.Query.Status == DevcraftWMS.DemoMvc.Enums.ReceiptStatus.Canceled }
    };

    var statusActiveOptions = new List<GridSelectOption>
    {
        new() { Value = string.Empty, Text = "Any", Selected = Model.Query.IsActive is null },
        new() { Value = "true", Text = "Active", Selected = Model.Query.IsActive == true },
        new() { Value = "false", Text = "Inactive", Selected = Model.Query.IsActive == false }
    };

    var warehouseOptions = new List<GridSelectOption>
    {
        new() { Value = string.Empty, Text = "All warehouses", Selected = Model.Query.WarehouseId is null }
    };
    warehouseOptions.AddRange(Model.Warehouses.Select(w => new GridSelectOption
    {
        Value = w.Value ?? string.Empty,
        Text = w.Text,
        Selected = Model.Query.WarehouseId.HasValue && w.Value == Model.Query.WarehouseId.Value.ToString()
    }));

    var filters = new GridFilterViewModel
    {
        Action = "Index",
        Controller = "Receipts",
        Fields = new List<GridFilterField>
        {
            new() { Name = "OrderBy", Value = Model.Query.OrderBy, IsHidden = true },
            new() { Name = "OrderDir", Value = Model.Query.OrderDir, IsHidden = true },
            new()
            {
                Label = "Warehouse",
                Name = "WarehouseId",
                Type = GridFilterType.Select,
                Options = warehouseOptions
            },
            new() { Label = "Receipt Number", Name = "ReceiptNumber", Value = Model.Query.ReceiptNumber },
            new() { Label = "Document", Name = "DocumentNumber", Value = Model.Query.DocumentNumber },
            new() { Label = "Supplier", Name = "SupplierName", Value = Model.Query.SupplierName },
            new()
            {
                Label = "Status",
                Name = "Status",
                Type = GridFilterType.Select,
                Options = statusOptions
            },
            new() { Label = "Received From", Name = "ReceivedFrom", Value = Model.Query.ReceivedFrom?.ToString("yyyy-MM-dd"), Type = GridFilterType.Date },
            new() { Label = "Received To", Name = "ReceivedTo", Value = Model.Query.ReceivedTo?.ToString("yyyy-MM-dd"), Type = GridFilterType.Date },
            new()
            {
                Label = "Active",
                Name = "IsActive",
                Type = GridFilterType.Select,
                Options = statusActiveOptions
            },
            new()
            {
                Label = "Include inactive",
                Name = "IncludeInactive",
                Type = GridFilterType.Select,
                Options = new List<GridSelectOption>
                {
                    new() { Value = "false", Text = "No", Selected = Model.Query.IncludeInactive == false },
                    new() { Value = "true", Text = "Yes", Selected = Model.Query.IncludeInactive }
                }
            },
            new()
            {
                Label = "Page Size",
                Name = "PageSize",
                Type = GridFilterType.Select,
                Options = new List<GridSelectOption>
                {
                    new() { Value = "10", Text = "10", Selected = Model.Query.PageSize == 10 },
                    new() { Value = "25", Text = "25", Selected = Model.Query.PageSize == 25 },
                    new() { Value = "50", Text = "50", Selected = Model.Query.PageSize == 50 }
                }
            }
        },
        ShowReset = true,
        ResetUrl = Url.Action("Index", "Receipts")
    };

    var filterDrawer = new FilterDrawerViewModel
    {
        Id = "receiptsFilters",
        Title = "Receipt filters",
        Filters = filters,
        ButtonText = "Filters",
        ButtonCssClass = "btn btn-outline-primary"
    };

    var grid = new GridBuilder<DevcraftWMS.DemoMvc.ViewModels.Receipts.ReceiptListItemViewModel>()
        .WithTitle("Receipts")
        .WithSubtitle($"Total: {Model.Pagination.TotalCount}")
        .WithPrimaryAction("New Receipt", Url.Action("Create", "Receipts") ?? "#")
        .WithItems(Model.Items)
        .WithPagination(Model.Pagination)
        .WithQueryOptions(queryOptions)
        .WithFilters(filters)
        .AddColumn("Number", item => new HtmlString(HtmlEncoder.Default.Encode(item.ReceiptNumber)), "ReceiptNumber")
        .AddColumn("Inbound Order", item => new HtmlString(HtmlEncoder.Default.Encode(item.InboundOrderNumber ?? "-")), "InboundOrderNumber")
        .AddColumn("Document", item => new HtmlString(HtmlEncoder.Default.Encode(item.DocumentNumber ?? "-")), "DocumentNumber")
        .AddColumn("Supplier", item => new HtmlString(HtmlEncoder.Default.Encode(item.SupplierName ?? "-")), "SupplierName")
        .AddColumn("Warehouse", item => new HtmlString(HtmlEncoder.Default.Encode(item.WarehouseName)), "WarehouseName")
        .AddColumn("Status", item => new HtmlString($"<span class=\"badge text-bg-light border\">{item.Status}</span>"), "Status")
        .AddColumn("Items", item => new HtmlString(item.ItemsCount.ToString("N0")), "ItemsCount")
        .AddColumn("Received", item => new HtmlString(item.ReceivedAtUtc?.ToLocalTime().ToString("g") ?? "-"), "ReceivedAtUtc")
        .AddColumn("Created", item => new HtmlString(item.CreatedAtUtc.ToLocalTime().ToString("g")), "CreatedAtUtc")
        .AddAction("Details", item => Url.Action("Details", "Receipts", new { id = item.Id }))
        .AddAction("Edit", item => Url.Action("Edit", "Receipts", new { id = item.Id }), "btn btn-sm btn-outline-primary")
        .AddAction("Delete", item => Url.Action("Delete", "Receipts", new { id = item.Id }), "btn btn-sm btn-outline-danger")
        .Build();
}

<div class="d-flex justify-content-end gap-2 mb-3">
    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#receiptsHelp">
        <i class="bi bi-question-circle me-1"></i>Help
    </button>
</div>
<partial name="_FilterDrawer" model="filterDrawer" />
<partial name="_Grid" model="grid" />
<partial name="_ReceiptsHelp" />
