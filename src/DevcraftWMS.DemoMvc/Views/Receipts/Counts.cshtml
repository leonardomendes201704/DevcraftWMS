@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Html
@using DevcraftWMS.DemoMvc.Enums
@model DevcraftWMS.DemoMvc.ViewModels.Receipts.ReceiptCountsPageViewModel
@{
    ViewData["Title"] = $"Receipt {Model.Receipt.ReceiptNumber} - Counts";
    ViewData["Subtitle"] = "Blind/assisted item counting";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-outline-secondary btn-sm" asp-controller="Receipts" asp-action="Details" asp-route-id="@Model.Receipt.Id">
        <i class="bi bi-arrow-left"></i> Back to receipt
    </a>
    <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#receiptCountsHelp">
        <i class="bi bi-question-circle me-1"></i>Help
    </button>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="text-muted small">Receipt</div>
                <div class="fw-semibold">@Model.Receipt.ReceiptNumber</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted small">Inbound Order</div>
                <div class="fw-semibold">@(Model.Receipt.InboundOrderNumber ?? "-")</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted small">Warehouse</div>
                <div class="fw-semibold">@Model.Receipt.WarehouseName</div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Register Count</h5>
        <form asp-controller="Receipts" asp-action="RegisterCount" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="NewCount.ReceiptId" />
            <div asp-validation-summary="All" class="text-danger small mb-2"></div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Mode</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-eye-slash"></i></span>
                        <select id="count-mode" asp-for="NewCount.Mode" class="form-select">
                            <option value="@ReceiptCountMode.Blind" selected="@(Model.NewCount.Mode == ReceiptCountMode.Blind)">Blind</option>
                            <option value="@ReceiptCountMode.Assisted" selected="@(Model.NewCount.Mode == ReceiptCountMode.Assisted)">Assisted</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-8">
                    <label class="form-label">Inbound Order Item</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-upc"></i></span>
                        <select asp-for="NewCount.InboundOrderItemId" class="form-select" asp-items="Model.NewCount.Items"></select>
                    </div>
                    <span class="text-danger small" asp-validation-for="NewCount.InboundOrderItemId"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Counted Quantity</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-123"></i></span>
                        <input asp-for="NewCount.CountedQuantity" class="form-control" type="number" step="0.001" min="0.001" inputmode="decimal" />
                    </div>
                    <span class="text-danger small" asp-validation-for="NewCount.CountedQuantity"></span>
                </div>
                <div class="col-md-8">
                    <label class="form-label">Notes</label>
                    <input asp-for="NewCount.Notes" class="form-control" />
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save Count</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Expected Items</h5>
                @if (!Model.ExpectedItems.Any())
                {
                    <div class="alert alert-warning">No expected items available for this receipt.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>UoM</th>
                                    <th data-expected="true">Expected</th>
                                    <th>Lot</th>
                                    <th>Expiry</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ExpectedItems)
                                {
                                    <tr>
                                        <td>@HtmlEncoder.Default.Encode($"{item.ProductCode} - {item.ProductName}")</td>
                                        <td>@HtmlEncoder.Default.Encode(item.UomCode)</td>
                                        <td data-expected="true">@item.ExpectedQuantity.ToString("N3")</td>
                                        <td>@HtmlEncoder.Default.Encode(item.LotCode ?? "-")</td>
                                        <td>@(item.ExpirationDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Registered Counts</h5>
                @if (!Model.Counts.Any())
                {
                    <div class="alert alert-secondary">No counts registered yet.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th data-expected="true">Expected</th>
                                    <th>Counted</th>
                                    <th>Variance</th>
                                    <th>Mode</th>
                                    <th>Notes</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var count in Model.Counts)
                                {
                                    var varianceClass = count.IsDivergent ? "text-bg-danger" : "text-bg-success";
                                    <tr>
                                        <td>@HtmlEncoder.Default.Encode($"{count.ProductCode} - {count.ProductName}")</td>
                                        <td data-expected="true">@count.ExpectedQuantity.ToString("N3")</td>
                                        <td>@count.CountedQuantity.ToString("N3")</td>
                                        <td><span class="badge @varianceClass">@count.Variance.ToString("N3")</span></td>
                                        <td>@count.Mode</td>
                                        <td>@HtmlEncoder.Default.Encode(count.Notes ?? "-")</td>
                                        <td>@count.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<partial name="_ReceiptCountsHelp" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            const modeSelect = document.getElementById('count-mode');
            const expectedColumns = document.querySelectorAll('[data-expected="true"]');

            const toggleExpected = () => {
                const show = modeSelect?.value === '@ReceiptCountMode.Assisted';
                expectedColumns.forEach(column => {
                    column.classList.toggle('d-none', !show);
                });
            };

            if (modeSelect) {
                modeSelect.addEventListener('change', toggleExpected);
            }

            toggleExpected();

            const normalizeDecimal = (input) => {
                if (!input || !input.value) return;
                input.value = input.value.replace(',', '.');
            };

            const form = document.querySelector('form[asp-action="RegisterCount"]') || document.querySelector('form[action*="RegisterCount"]');
            if (form) {
                form.addEventListener('submit', () => {
                    normalizeDecimal(document.getElementById('NewCount_CountedQuantity'));
                });
            }
        })();
    </script>
}
