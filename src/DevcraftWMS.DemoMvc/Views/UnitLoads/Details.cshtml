@model DevcraftWMS.DemoMvc.ViewModels.UnitLoads.UnitLoadDetailsPageViewModel
@{
    ViewData["Title"] = $"Unit Load {Model.UnitLoad.SsccInternal}";
    ViewData["Subtitle"] = "Label details and print actions";

    var statusBadge = Model.UnitLoad.Status switch
    {
        DevcraftWMS.DemoMvc.Enums.UnitLoadStatus.Printed => "text-bg-success",
        DevcraftWMS.DemoMvc.Enums.UnitLoadStatus.PutawayCompleted => "text-bg-primary",
        DevcraftWMS.DemoMvc.Enums.UnitLoadStatus.Canceled => "text-bg-secondary",
        _ => "text-bg-light"
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-secondary btn-sm" asp-controller="UnitLoads" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
    <div class="d-flex gap-2">
        @if (Model.UnitLoad.Status != DevcraftWMS.DemoMvc.Enums.UnitLoadStatus.Canceled)
        {
            <form asp-controller="UnitLoads" asp-action="Print" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.UnitLoad.Id" />
                <button type="submit" class="btn btn-success btn-sm">
                    <i class="bi bi-printer me-1"></i>Print Label
                </button>
            </form>
        }
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="text-muted small">Status</div>
                <span class="badge @statusBadge">@Model.UnitLoad.Status</span>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">SSCC (Internal)</div>
                <div class="fw-semibold">@Model.UnitLoad.SsccInternal</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">SSCC (External)</div>
                <div class="fw-semibold">@(Model.UnitLoad.SsccExternal ?? "-")</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Receipt</div>
                <div class="fw-semibold">@Model.UnitLoad.ReceiptNumber</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Warehouse</div>
                <div class="fw-semibold">@Model.UnitLoad.WarehouseName</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Printed At</div>
                <div class="fw-semibold">@(Model.UnitLoad.PrintedAtUtc?.ToLocalTime().ToString("g") ?? "-")</div>
            </div>
            <div class="col-md-6">
                <div class="text-muted small">Notes</div>
                <div class="fw-semibold">@(Model.UnitLoad.Notes ?? "-")</div>
            </div>
        </div>
    </div>
</div>

@if (Model.Label is not null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Generated Label</h5>
            <pre class="bg-light border rounded p-3 mb-0">@Model.Label.Content</pre>
        </div>
    </div>
}

@if (Model.UnitLoad.Status != DevcraftWMS.DemoMvc.Enums.UnitLoadStatus.Canceled)
{
    <div class="card mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">Re-label Unit Load</div>
                <div class="text-muted small">Generate a new internal SSCC and preserve history.</div>
            </div>
        </div>
        <div class="card-body">
            <form asp-controller="UnitLoads" asp-action="Relabel" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.UnitLoad.Id" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Reason</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-pen"></i></span>
                            <input asp-for="RelabelForm.Reason" class="form-control" placeholder="Why is this UL being re-labeled?" />
                        </div>
                        <span asp-validation-for="RelabelForm.Reason" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Notes (optional)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-chat-left-text"></i></span>
                            <input asp-for="RelabelForm.Notes" class="form-control" placeholder="Additional context" />
                        </div>
                        <span asp-validation-for="RelabelForm.Notes" class="text-danger small"></span>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-tag me-1"></i>Generate New SSCC
                    </button>
                </div>
            </form>
        </div>
    </div>
}

<div class="card mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <div class="fw-semibold">Re-label History</div>
        <span class="text-muted small">@Model.UnitLoad.RelabelHistory.Count event(s)</span>
    </div>
    <div class="card-body p-0">
        @if (Model.UnitLoad.RelabelHistory.Count == 0)
        {
            <div class="p-4 text-muted">No re-label events recorded.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Relabeled At</th>
                            <th>Old SSCC</th>
                            <th>New SSCC</th>
                            <th>Reason</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model.UnitLoad.RelabelHistory)
                        {
                            <tr>
                                <td>@entry.RelabeledAtUtc.ToLocalTime().ToString("g")</td>
                                <td>@entry.OldSsccInternal</td>
                                <td>@entry.NewSsccInternal</td>
                                <td>@(string.IsNullOrWhiteSpace(entry.Reason) ? "-" : entry.Reason)</td>
                                <td>@(string.IsNullOrWhiteSpace(entry.Notes) ? "-" : entry.Notes)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
