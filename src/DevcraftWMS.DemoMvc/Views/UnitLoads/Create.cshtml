@model DevcraftWMS.DemoMvc.ViewModels.UnitLoads.UnitLoadFormViewModel
@{
    ViewData["Title"] = "New Unit Load";
    ViewData["Subtitle"] = "Create internal SSCC linked to a receipt";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-secondary btn-sm" asp-controller="UnitLoads" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>

<form asp-controller="UnitLoads" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger small mb-2"></div>
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Receipt</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-receipt"></i></span>
                <select asp-for="ReceiptId" class="form-select" asp-items="Model.Receipts"></select>
            </div>
            <span class="text-danger small" asp-validation-for="ReceiptId"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">External SSCC (optional)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                <input asp-for="SsccExternal" class="form-control" maxlength="50" />
            </div>
            <span class="text-danger small" asp-validation-for="SsccExternal"></span>
        </div>
        <div class="col-md-12">
            <label class="form-label">Notes</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-chat-text"></i></span>
                <textarea asp-for="Notes" class="form-control" rows="3" maxlength="500"></textarea>
            </div>
            <span class="text-danger small" asp-validation-for="Notes"></span>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create Unit Load</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
