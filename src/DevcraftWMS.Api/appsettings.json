{
  "ConnectionStrings": {
    "MainDb": "Data Source=App_Data/app.db",
    "LogsDb": "Data Source=App_Data/logs.db"
  },
  "Jwt": {
    "Issuer": "DevcraftWMS",
    "Audience": "DevcraftWMSAudience",
    "SigningKey": "dev-signing-key-change-me-please-32bytes"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Outbox": {
    "BatchSize": 20,
    "PollingSeconds": 5
  },
  "Logging": {
    "Requests": {
      "Enabled": true,
      "SamplingPercent": 100,
      "MaxBodyBytes": 32768,
      "ExcludedPaths": [ "/swagger", "/health" ],
      "ExcludedContentTypes": [ "multipart/form-data", "application/octet-stream" ]
    },
    "Errors": {
      "Enabled": true,
      "MaxBodyBytes": 32768
    },
    "Transactions": {
      "Enabled": true,
      "ExcludedEntities": [ "RequestLog", "ErrorLog", "TransactionLog" ],
      "ExcludedProperties": [ "PasswordHash", "PasswordSalt" ]
    },
    "Mask": {
      "Enabled": true,
      "HeaderDenyList": [ "Authorization", "Cookie", "Set-Cookie", "X-Api-Key" ],
      "JsonKeys": [ "password", "senha", "token", "secret", "apikey", "passwordHash" ],
      "JsonPaths": [ "$.password", "$.token", "$.credentials.password" ]
    },
    "Retention": {
      "Enabled": true,
      "RunIntervalMinutes": 60
    },
    "RetentionDays": {
      "Requests": 7,
      "Errors": 30,
      "Transactions": 30
    },
    "Enrichment": {
      "TenantClaim": "tenant",
      "UserIdClaim": "sub",
      "TenantHeader": "X-Tenant-Id"
    },
    "Queue": {
      "Capacity": 1000
    },
    "RequestIdHeader": "X-Request-Id"
  },
  "Telemetry": {
    "Enabled": true,
    "RequireAuth": true,
    "InternalKeyEnabled": true,
    "InternalKey": "dev-telemetry-key-change-me",
    "MaxPayloadBytes": 32768,
    "Masking": {
      "HeaderDenyList": [ "Authorization", "Cookie", "Set-Cookie", "X-Api-Key" ],
      "JsonKeys": [ "password", "senha", "token", "secret", "apikey", "passwordHash" ]
    }
  },
  "CustomerContext": {
    "HeaderName": "X-Customer-Id",
    "ExcludedPaths": [ "/swagger", "/health", "/api/auth", "/api/customers", "/api/telemetry", "/api/settings" ]
  },
  "Cors": {
    "AllowedOrigins": [ "https://localhost:7024" ]
  },
  "Email": {
    "Smtp": {
      "Host": "smtp.example.com",
      "Port": 587,
      "UseSsl": true,
      "Username": "user@example.com",
      "Password": "change-me",
      "DefaultFrom": "no-reply@example.com"
    },
    "Inbox": {
      "Protocol": "Imap",
      "Host": "imap.example.com",
      "Port": 993,
      "UseSsl": true,
      "Username": "user@example.com",
      "Password": "change-me",
      "MaxMessagesPerPoll": 50
    },
    "Processing": {
      "OutboxPollingSeconds": 5,
      "InboxPollingSeconds": 30,
      "BatchSize": 20,
      "MaxAttempts": 5
    }
  },
  "ExternalAuth": {
    "Providers": {
      "Google": {
        "UserInfoUrl": "https://www.googleapis.com/oauth2/v3/userinfo"
      },
      "Facebook": {
        "UserInfoUrl": "https://graph.facebook.com/me?fields=id,name,email"
      },
      "LinkedIn": {
        "UserInfoUrl": "https://api.linkedin.com/v2/userinfo"
      },
      "Microsoft": {
        "UserInfoUrl": "https://graph.microsoft.com/v1.0/me"
      }
    }
  },
  "AdminUser": {
    "Email": "admin@admin.com.br",
    "Password": "Naotemsenha0!",
    "FullName": "System Administrator"
  },
  "Seed": {
    "SampleData": {
      "Enabled": false,
      "CustomerId": "11111111-1111-1111-1111-111111111111",
      "CustomerName": "Demo Customer",
      "CustomerEmail": "demo.customer@devcraft.local",
      "WarehouseCode": "WH-DEMO",
      "WarehouseName": "Demo Warehouse",
      "ProductCount": 10,
      "LotsPerProduct": 1,
      "LotExpirationWindowDays": 90,
      "MovementCount": 5,
      "MovementPerformedWindowDays": 14,
      "MovementQuantityMin": 1,
      "MovementQuantityMax": 15
    }
  },
  "Dashboard": {
    "ExpiringLotsDays": 90,
    "InboundWindowDays": 30
  },
  "Notifications": {
    "InboundOrders": {
      "EmailEnabled": true,
      "WebhookEnabled": false,
      "PortalEnabled": true,
      "WebhookUrl": "",
      "WebhookTimeoutSeconds": 10
    }
  },
  "ReceiptDivergences": {
    "EvidenceRequiredTypes": [ "DamagedGoods", "PackagingIssue", "ExpiredItem" ],
    "MaxEvidenceBytes": 5000000
  },
  "ReceiptMeasurements": {
    "BlockOnDeviation": false,
    "MaxWeightDeviationPercent": 10,
    "MaxVolumeDeviationPercent": 10
  },
  "AllowedHosts": "*"
}


